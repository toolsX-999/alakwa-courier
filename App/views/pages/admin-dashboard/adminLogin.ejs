<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"> -->
	<link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/index.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
	<title>FX Logistics</title>
	<!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> -->
	<!-- The reason for the / here is because i am in the partials dir. So i need to refer the bootstrap from /  -->
	<script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
	<!-- Container -->
	<div class="container-fluid login-page" style="background-color: #fc0;">
		<!-- Header with logo -->
		<div class="row pt-2">
			<div style="z-index: 100;">
				<div>
					<a href="/">
						<svg width="200" height="60" viewBox="40 0 200 80" xmlns="http://www.w3.org/2000/svg">
							<!-- Letter F -->
							<text x="10" y="55" font-family="Montserrat, sans-serif" font-size="50" font-weight="700"
								fill="#E3000F">
								Q
							</text>

							<!-- Custom "X" with a much longer "/" and shorter "\" -->
							<g transform="translate(35, 10)">
								<!-- Longer Slash "/" -->
								<line x1="-10" y1="65" x2="80" y2="-15" stroke="#E3000F" stroke-width="8"
									stroke-linecap="round" />
								<!-- Shorter Backslash "\" -->
								<line x1="10" y1="10" x2="50" y2="50" stroke="#E3000F" stroke-width="8"
									stroke-linecap="round" />
							</g>
						</svg>
					</a>
				</div>
			</div>
		</div>
		<!-- Header with logo ends -->

		<div class="row d-flex justify-content-center mt-1;">
			<!-- Form container -->
			<div class="col-12 login-container mt-3">
				<!-- Form logo Section -->
				<div class="text-center mb-3">
					<a href="/">
						<svg width="200" height="60" viewBox="40 0 200 80" xmlns="http://www.w3.org/2000/svg">
							<!-- Letter F -->
							<text x="10" y="55" font-family="Montserrat, sans-serif" font-size="50" font-weight="700"
								fill="#E3000F">
								Q
							</text>

							<!-- Custom "X" with a much longer "/" and shorter "\" -->
							<g transform="translate(35, 10)">
								<!-- Longer Slash "/" -->
								<line x1="-10" y1="65" x2="80" y2="-15" stroke="#E3000F" stroke-width="8"
									stroke-linecap="round" />
								<!-- Shorter Backslash "\" -->
								<line x1="10" y1="10" x2="50" y2="50" stroke="#E3000F" stroke-width="8"
									stroke-linecap="round" />
							</g>
							<text x="100" y="45" font-family="Montserrat, sans-serif" font-size="20" font-weight="500"
								fill="#343a40">
								Logistics
							</text>
						</svg>
					</a>
				</div>
				<!-- Form logo Section ends -->

				<!-- Login Form -->
				<form action="/auth/admin-login" method="post">
					<!-- Email Field -->
					<div class="mb-3">
						<div class="input-group">
							<span class="input-group-text rounded-0" id="basic-addon1">
								<i class="fas fa-user-alt p-2"></i>
							</span>
							<input type="text" name="email" class="form-control rounded-0" placeholder="Email"
								aria-label="Email" aria-describedby="basic-addon1">
						</div>
					</div>
					<!-- Password Field -->
					<div class="mb-3">
						<div class="input-group">
							<span class="input-group-text rounded-0" id="basic-addon2">
								<i class="fas fa-key p-2"></i>
							</span>
							<input type="password" name="password" class="form-control rounded-0" placeholder="Password"
								aria-label="Password" aria-describedby="basic-addon2">
						</div>
						<!-- Feedback messages -->
						<% if (message) { %>
							<div class="invalid-feedback d-flex align-items-start gap-2 mt-2 p-2 small text-danger">
							  <i class="fas fa-circle-exclamation mt-1"></i>
							  <span><%= status %>: <%= message %></span>
							</div>
						  <% } %>
						<!-- Feedback messages end -->
					</div>
					<!-- Forgot Password Link -->
					<div class="mb-3 text-center">
						<a href="#" style="font-weight: bold; text-decoration: underline;">Forgot Password?</a>
					</div>
					<!-- Login Button -->
					<div style="margin-top: 10px;">
						<button class="btn btn-primary w-100" type="submit">Login</button>
					</div>

					<div class="d-flex align-items-center justify-content-center my-4">
						<hr class="flex-grow-1 text-muted m-0">
						<span class="mx-3 text-muted">OR</span>
						<hr class="flex-grow-1 text-muted m-0">
					</div>

					<!-- Button: "Log in as Employee" with red text/border -->
					<div class="text-center">
						<button class="btn btn-outline-danger w-100">
							<i class="fas fa-user me-2"></i> Log in as Employee
						</button>
					</div>
				</form>
			</div>
			<!-- Form container ends -->
		</div>
	</div>
	<!-- Container ends -->
</body>

</html>